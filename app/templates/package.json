    "scripts": {
        "build:js": "browserify src/js/app.js -t babelify > public/js/app.js",
        "build:css": "node-sass --output-style compressed src/css/app.scss > public/css/app.css",
        "build": "npm run build:js & npm run build:css",
        "copy:css": "cp -r bower_components/marx/scss/ src/css/marx",
        "livereload": "livereload public",
        "start": "npm run build & serve public & npm run watch & npm run livereload",
        "test": "karma start",
        "watch:js": "watchify -t babelify src/js/app.js -o public/js/app.js --debug",
        "watch:css": "node-sass -w src/css/app.scss > public/css/app.css",
        "watch": "watch:js & watch:css"
    },
